@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Content("/Identity/Account/Login")">
                <button type="submit" class="nav-link btn btn-link text-dark logoutbtn">LogOut</button>
            </form>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark"  title="Manage">      |      !Welcome @User.Identity?.Name.Split('@')[0]</a>
    </li>

}

</ul>
